<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <%= hidden_field :user, :id %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, requierd: true,autofocus: true, :class => "form-control my-form" %>
  </div>

  <div class="field">
    <%= f.label :Genre %><br>
    <%= f.collection_select :genre, Genre.all, :id, :genre_name, {include_blank: false}, {class: "form-control my-form"} %>
  </div>
  <!--<div class="field">-->
  <!--  <= f.label :genre %><br />-->
  <!--  <= f.select :genre, ["Rock", "Pops","Metal", "Accoustic", "Classic"], {}, {:class => "form-control my-form"} %>-->
  <!--</div>-->
  
  <div class="field">
    <%= f.label :Location %><br />
    <%= f.collection_select :area, Area.all, :id, :view_country_and_area, {include_blank: false}, {class: "form-control my-form"} %>
  </div>
  
  <!--[OLD] User Icon-->
  <!--<div class="field">-->
  <!--  <= f.label :icon %><br />-->
  <!--  <span class="btn btn-large btn-success btn-file">-->
  <!--    Add icon-->
  <!--    <= f.file_field :icon %>-->
  <!--  </span>-->
  <!--</div>  -->
  
    <div class="field">
    <%= f.label :image, "File" %><br />
    <span class="btn btn-large btn-success btn-file">
      Add icon
      <%= f.file_field :images, multiple: true %>
    </span>
  </div>  

  <div class="field">
    <%= f.label :profile %><br />
    <%= f.text_area :profile, :class => "form-control my-form" %>
  </div>

  <% if @user.user_type == "i" %>
    <div class="field">
      <%= f.label :gender %><br />
      <%= f.select :gender, ["Male", "Female", "None"], {}, {:class => "form-control my-form"} %>
    </div>

    <div class="field">
      <%= f.label :waiting %><br />
      <%= f.select :waiting, ["Welcome", "No Thanks"], {}, {:class => "form-control my-form"} %>
    </div>
    
    <div class="field">
      <%= f.label :Part %><br />
      <%= f.collection_select :part, Part.all, :id, :part_name, {prompt: false}, {class: "form-control my-form"} %>
    </div>
    
  <% else %>
  
    <div class="field">
      <%= f.label :banmas_id %><br />
      <%= f.text_field :banmas_id, :class => "form-control my-form" %>
    </div>    
      
  <% end %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "form-control my-form" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "new-password", :class => "form-control my-form" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", :class => "form-control my-form" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password", :class => "form-control my-form" %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit "Update", :class => "btn btn-primary" %>
  </div>
<% end %>
<!--end of form-->

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete,:class => "btn btn-danger" %></p>

<%= link_to "Back", :back %>

