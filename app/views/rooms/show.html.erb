<br>
<div class="row">
  <div class="col-xs-3 text-center">

  <hr>
    <h4>Members</h4>
    <% @entries.each do |e| %>
      <h5><strong><a href="/users/<%= e.user.id %>"><%= e.user.name %> さん</a></strong></h5>
    <% end %>
  </div>
  <div class="col-xs-9">
    <div class="m_slider">
      <% if @messages.present? %>
        <% @messages.each do |m| %>
          <% if m.user_id == current_user.id %>
            <h4 class="text-right">
              <p class="alert alert-warning">
              <%= m.content %>
              <br><br>
              <small>
                <strong>
                  <a href="/users/<%= m.user_id %>">
                    <% if current_user.icon.nil? %>
                        <img src="<%= "/user_icon/default_icon.png" %>"  class = "user_icon_nav">
                    <% else %>
                        <img src="<%= "/user_icon/#{current_user.icon}" %>"  class = "user_icon_nav">
                    <% end %>
                    <%= m.user.name %> さん</a>
                </strong>
                <%= m.created_at.strftime('%Y/%m/%d %H:%M') %>
              </small>
              </p>
            </h4>
          <% else %>
            <h4 class="text-left">
            <p class="alert alert-info">
            <%= m.content %>
            <br><br>
            <small>
              <strong>
                <a href="/users/<%= m.user_id %>">
                  <% if current_user.icon.nil? %>
                      <img src="<%= "/user_icon/default_icon.png" %>"  class = "user_icon_nav">
                  <% else %>
                      <img src="<%= "/user_icon/#{current_user.icon}" %>"  class = "user_icon_nav">
                  <% end %>
                  <%= m.user.name %>さん</a>
              </strong>
              <%= m.created_at.strftime('%Y/%m/%d %H:%M') %>
            </small>
            </p>
            </h4>
          <% end %>
        <% end %>
      <% else %>
        <br>
        <h3 class="text-center">Send Something!</h3>
        <br>
      <% end %>
    </div>
    
    <hr>
    <%= form_for @message do |f| %>
      <%= f.text_field :content, :class => "form-control", :placeholder => "Say something" %>
      <%= f.hidden_field :room_id, :value => @room.id %>
      <br>
      <div class="text-center">
        <%= f.submit "Post", :class => "btn btn-primary" %>
      </div>
    <% end %>
  </div>  
</div>