<h1>Add Medias for your Band!</h1>
<br><br>

  <%= form_for @band_detail, :html => { multipart: true } do |f| %>
  
  
    <div class="field">
      <%= f.label :file_name %><br />
      <ul class="file_post">
        <li class="file_post">*You can add up to 5-file<br>
          <span class="btn btn-large btn-success btn-file">
            Choose File(s)
              <%= file_field_tag "images[]", type: :file, multiple: true, :class => "" %>
          </span>
        </li>
      </ul>
    </div>
  
  <br>
  
    <div class="field">
      <%= f.label :Comment %><br />
      <%= f.text_area :file_exp, :class => "form-control my-form" %>
    </div>  
  
  <br>
    <div class="actions">
      <%= f.submit "Post!", :class => "btn btn-default" %>
    </div>
  <% end%>
