<!--Nov 14-->
<%= form_tag("/users",method:"get") do %>
<input type="text" name="search" class ="search-form my-form">
<input type="submit" value="search" class = " btn btn-default search-btn">
<% end %>
<!--Nov 14-->

<hr>

<% @users.each do |u| %>
  <div class="users-index-item">
    <div class = "user-left">
      
      <% if u.images.present? %>
        <%=  image_tag(u.images[0].url) %>
      <% else %>
        <img src="<%= "/user_icon/default_icon.png" %>">
        <!--<img src="<= "/user_icon/#{u.icon}" %>" >-->
      <% end %>      
      
    </div>
    <div class = "user-right">
      <p><a href ="/users/<%= u.id %>"><%= u.name %>さん</a></p>
    </div>
  </div>

<% end %>
<br>
<a href = "/photos" class = " btn btn-default">Back to Top</a>

